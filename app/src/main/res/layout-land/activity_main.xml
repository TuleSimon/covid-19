<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activity.MainActivity"
                                             android:background="@color/colorPrimaryDark"
>


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="406dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="406dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/showcases1"
                android:layout_width="400dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/caseslabel"
                    android:layout_width="408dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="34 NEW CASES OF COVID-19 HAS BEEN DISCOVERED IN NIGERIA" />

                <TextView
                    android:id="@+id/recoveredvalue2"
                    android:layout_width="234dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView11" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="80dp"
                    android:background="@drawable/shape4"
                    android:paddingTop="5dp"
                    android:text="RECOVERED"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/recoveredvalue2"
                    app:layout_constraintTop_toBottomOf="@+id/caseslabel" />

                <TextView
                    android:id="@+id/deceasedvalue2"
                    android:layout_width="234dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape6"
                    android:paddingTop="5dp"
                    android:text="DECEASED"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/deceasedvalue2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/infectedvalue2"
                    android:layout_width="234dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape3"
                    android:paddingTop="5dp"
                    android:text="INFECTED"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/infectedvalue2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/showcases2"
                android:layout_width="400dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/recoveredvalue"
                    android:layout_width="234dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infectedvalue" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape4"
                    android:paddingTop="5dp"
                    android:text="RECOVERED"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/recoveredvalue"
                    app:layout_constraintTop_toBottomOf="@+id/infectedvalue" />

                <TextView
                    android:id="@+id/deceasedvalue"
                    android:layout_width="234dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape6"
                    android:paddingTop="5dp"
                    android:text="DECEASED"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/deceasedvalue"
                    app:layout_constraintTop_toBottomOf="@+id/activecasesvalue" />

                <TextView
                    android:id="@+id/activecasesvalue"
                    android:layout_width="234dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recoveredvalue" />

                <TextView
                    android:id="@+id/testedvalue"
                    android:layout_width="234dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView8" />

                <TextView
                    android:id="@+id/infectedvalue"
                    android:layout_width="234dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/shape2"
                    android:paddingTop="5dp"
                    android:paddingRight="9dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape3"
                    android:paddingTop="5dp"
                    android:text="INFECTED"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/infectedvalue"
                    app:layout_constraintTop_toBottomOf="@+id/testedvalue" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape5"
                    android:paddingTop="5dp"
                    android:text="ACTIVE CASES"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/recoveredvalue"
                    app:layout_constraintTop_toBottomOf="@+id/recoveredvalue" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="173dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/shape"
                    android:paddingTop="5dp"
                    android:text="TESTED"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/testedvalue"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/horizontalScrollView2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechartid"
                android:layout_width="380dp"

                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="4dp">

            </com.github.mikephil.charting.charts.PieChart>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchartid"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.BarChart>

        </LinearLayout>
    </HorizontalScrollView>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView" app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorAccent"/>

    <com.google.android.material.appbar.MaterialToolbar
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:id="@+id/toolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:popupTheme="@color/colorPrimary">
        <Spinner android:layout_width="wrap_content"
                 android:backgroundTint="@color/colorAccent"
                 android:layout_height="wrap_content" android:popupBackground="@color/colorPrimary"
                 tools:layout_editor_absoluteY="16dp" android:id="@+id/spinner">

        </Spinner>
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9dp"
        android:text="COVID-19 TRACKER"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/infoScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="648dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/info5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/info4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/info3" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/regionframe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewofregion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nigeria Covid-19 Cases In Regions"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </com.google.android.material.appbar.MaterialToolbar>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/Bottomdrawer"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottommenu"
            app:elevation="12dp"
            app:itemTextColor="@color/colorAccent" app:itemIconSize="30dp"
            android:fadingEdge="horizontal|vertical" android:fitsSystemWindows="true" android:focusable="auto"
            android:overScrollMode="ifContentScrolls"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/bottomNavigationView" android:visibility="visible"
            android:background="@color/colorPrimary">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>