                            android:layout_marginEnd="52dp"
                            android:background="@drawable/shape2"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingRight="9dp"
                            android:text="40dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.777"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/infectedvalue" />
                        <TextView
                                android:text="RECOVERED"
                                android:layout_width="173dp"
                                android:layout_height="35dp" android:background="@drawable/shape4"
                                android:textAlignment="center" android:textAllCaps="false"
                                android:paddingTop="5dp"
                                android:textSize="18sp" android:id="@+id/textView7" android:layout_marginTop="20dp"
                                app:layout_constraintTop_toBottomOf="@+id/infectedvalue"
                                android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="@+id/recoveredvalue"
                                android:textColor="@color/colorAccent"/>

                        <TextView
                            android:id="@+id/deceasedvalue"
                            android:layout_width="234dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="52dp"
                            android:background="@drawable/shape2"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingRight="9dp"
                            android:text="40dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.777"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />
                        <TextView
                                android:text="DECEASED"
                                android:layout_width="173dp"
                                android:layout_height="35dp" android:background="@drawable/shape6"
                                android:textAlignment="center" android:textAllCaps="false"
                                android:paddingTop="5dp"
                                android:textSize="18sp" android:id="@+id/textView10"
                                android:textColor="@color/colorAccent" android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/activecasesvalue"
                                android:layout_marginEnd="72dp"
                                app:layout_constraintEnd_toEndOf="@+id/deceasedvalue"/>

                        <TextView
                            android:id="@+id/activecasesvalue"
                            android:layout_width="234dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="52dp"
                            android:background="@drawable/shape2"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingRight="9dp"
                            android:text="40dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.777"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/recoveredvalue" />

                        <TextView
                            android:id="@+id/testedvalue"
                            android:layout_width="234dp"
                            android:layout_height="34dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="52dp"
                            android:background="@drawable/shape2"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingRight="9dp"
                            android:text="40dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.764"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView8" />

                        <TextView
                            android:id="@+id/infectedvalue"
                            android:layout_width="234dp"
                            android:layout_height="34dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="52dp"
                            android:background="@drawable/shape2"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingRight="9dp"
                            android:text="40dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.777"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8" />
                        <TextView
                                android:text="INFECTED"
                                android:layout_width="173dp"
                                android:layout_height="35dp" android:background="@drawable/shape3"
                                android:textAlignment="center" android:textAllCaps="true"
                                android:paddingTop="5dp"
                                android:textSize="18sp" android:id="@+id/textView6"
                                android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="@+id/infectedvalue"
                                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/testedvalue"
                                android:textColor="@color/colorAccent"/>
                        <TextView
                                android:text="ACTIVE CASES"
                                android:layout_width="173dp"
                                android:layout_height="35dp" android:background="@drawable/shape5"
                                android:textAlignment="center" android:textAllCaps="false"
                                android:paddingTop="5dp"
                                android:textSize="18sp" android:id="@+id/textView9" android:layout_marginTop="20dp"
                                app:layout_constraintTop_toBottomOf="@+id/recoveredvalue"
                                android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="@+id/recoveredvalue"
