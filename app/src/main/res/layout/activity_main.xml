                                android:textSize="12sp" android:layout_marginStart="17dp" android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.107"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/recoveredvalue"
                            android:layout_width="234dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="8dp"
