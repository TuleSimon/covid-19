                <TextView
                        android:text="This Values are gotten from an Api linked to NCDC Nig, \nI am not Responsible for any inaccuracy in figures"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:id="@+id/textView16"
                        android:textColor="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deceasedvalue2" android:textAlignment="center"
                        android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
