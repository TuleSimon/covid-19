                    android:layout_height="match_parent" android:id="@+id/showcases2">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="400dp"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="This Values are gotten from an Api linked to NCDC Nig,\n I am not Responsible for any inaccuracy in figures"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView17"
                                android:textColor="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView10"
